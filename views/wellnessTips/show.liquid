{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ wellnessTip.title }} -
        {% if wellnessTip.ready %}
          Ready
        {% else %}
          Not Ready
        {% endif %}
      </h2>
      <h3>Amount: {{ wellnessTip.amount }}</h3>
      <h6>Body: {{ wellnessTip.body }}</h6>
      {% if wellnessTip.owner == userId %}
        <div class="btn-group">

          <a href="/wellnessTips/{{ wellnessTip.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/wellnessTips/{{ wellnessTip.id }}?_method=DELETE" method="POST">
            <input
              type="submit"
              value="Delete"
              class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}