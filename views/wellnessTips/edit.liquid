{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/wellnessTips?_method=PUT" method="POST">
      <fieldset>
        <legend>Create New wellnessTip</legend>
        <label class="form-label">Title:
        </label>
        <input
          type="text"
          name="title"
          placeholder="{{ wellnessTip.title }}"
          value="{{ wellnessTip.title }}"
          class="form-control">
        <label class="form-label">Body:</label>
        <input
          type="text"
          name="body"
          placeholder="{{ wellnessTip.body }}"
          value="{{ wellnessTip.body }}"
          class="form-control">
        <label class="form-label">Amount:</label>
        <input
          type="number"
          name="amount"
          value="{{ wellnessTip.amount }}"
          class="form-control">
        <label class="form-label">Ready:</label>
        <input
          type="checkbox"
          name="ready"
          class="form-check-input"
          {% if wellnessTip.ready %}
          checked
          {% endif %}>
      </fieldset>
      <input
        type="submit"
        value="Edit wellnessTip"
        class="btn btn-success">
    </form>
  </div>
{% endblock %}