{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article class="show-item">
      <h2>
        {{ wellnessTip.title }}

      </h2>
      <h3>Good For: {{ wellnessTip.goodFor }}</h3>
      <h6>Description: {{ wellnessTip.description }}</h6>
      <form action="/comments/{{ wellnessTip.id }}" method="POST">
        <fieldset>
          <legend>Add Comment</legend>
          <label class="form-label">comment:
          </label>
          <input
            type="text"
            name="note"
            class="form-control mb-1">
        </fieldset>
        <input
          type="submit"
          class="btn btn-success"
          value="add comment">
      </form>

      {% if wellnessTip.owner == userId %}
        <div class="btn-group">

          <a href="/wellnessTips/{{ wellnessTip.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/wellnessTips/{{ wellnessTip.id }}?_method=DELETE" method="POST">
            <input
              type="submit"
              value="Delete"
              class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}