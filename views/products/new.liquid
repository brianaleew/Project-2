{% layout 'layout.liquid' %}
{% block content %}

  <div class="inner-content">
    <div style=" margin-bottom: 30px;" class="container-sm ">
      <form action="/products" method="POST">
        <fieldset>
          <legend style="margin-top: 30px; font-family: lobster,cursive; font-size: 40px;">Create a New product</legend>
          <label class="form-label">Product Name:
          </label>
          <input
            type="text"
            name="name"
            placeholder="enter product name"
            class="form-control">
          <label class="form-label">Brand:
          </label>
          <input
            type="text"
            name="brand"
            placeholder="Enter brand name"
            class="form-control">
          <label class="form-label">Personal Rating:
          </label>
          <input
            type="number"
            name="personalRating"
            placeholder="1-10"
            class="form-control">
          <label class="form-label">Description:</label>
          <input
            type="text"
            name="description"
            placeholder="Tell us about the product!"
            class="form-control">
          <label class="form-label">Good For:</label>
          <input
            type="text"
            name="goodFor"
            placeholder="What does your product help with?"
            class="form-control">
          <label class="form-label">Skin Types:</label>
          <input
            type="text"
            name="skinType"
            placeholder="Which skin type is this product for?(can be for All skin types!)"
            class="form-control">
          <label class="form-label">Time Used:</label>
          <input
            type="text"
            name="timeUsed"
            placeholder="How long have you used this product?"
            class="form-control">
          <label class="form-label">
            Product Image</label>
          <input
            type="text"
            name="productImg"
            placeholder="Paste your Image Address link here"
            class="form-control">
          <label class="form-label">
            Product Link</label>
          <input
            type="text"
            name="productLink"
            placeholder="Paste the link to your product here so users can buy"
            class="form-control">

        </fieldset>
        <input
          type="submit"
          value="Share New product"
          class="btn btn-success">
      </form>
    </div>
    <div>
      <h4 style="position:relative; top: 120px;">For inspiration check out the Wellness Feed!</h4>
      <img
        style="position:relative; top: 120px;"
        src="https://i.pinimg.com/736x/8d/6d/d5/8d6dd51386941c5d1a1014fb8205e14d.jpg"
        alt="">
    </div>

  </div>

{% endblock %}