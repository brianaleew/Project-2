{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/products?_method=PUT" method="POST">
      <fieldset>
        <legend>Create New product</legend>
        <label class="form-label">Title:
        </label>
        <input
          type="text"
          name="title"
          placeholder="{{ product.title }}"
          value="{{ product.title }}"
          class="form-control">
        <label class="form-label">Body:</label>
        <input
          type="text"
          name="body"
          placeholder="{{ product.body }}"
          value="{{ product.body }}"
          class="form-control">
        <label class="form-label">Amount:</label>
        <input
          type="number"
          name="amount"
          value="{{ product.amount }}"
          class="form-control">
        <label class="form-label">Ready:</label>
        <input
          type="checkbox"
          name="ready"
          class="form-check-input"
          {% if product.ready %}
          checked
          {% endif %}>
      </fieldset>
      <input
        type="submit"
        value="Edit product"
        class="btn btn-success">
    </form>
  </div>
{% endblock %}